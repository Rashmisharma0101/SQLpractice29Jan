customers(customer_id, customer_name, region)
products(product_id, product_name, category)
orders(order_id, customer_id, product_id, order_date, quantity, price)
--------------------------------------------------------------------------------------------------------------
Get customer name, product name, and total sales for each order.
select orders.order_id, customers.customer_name, products.product_name, orders.quantity * orders.price as total_sales
from customers join orders 
on customers.customer_id = orders.customer_id
join products on
products.product_id = orders.product_id

--------------------------------------------------------------------------------------------------------------
select distinct customers.customer_name from 
from customers left join orders 
on customers.customer_id = orders.customer_id
--------------------------------------------------------------------------------------------------------------
select distinct customers.customer_name, orders.order_id from 
from customers outer join orders 
on customers.customer_id = orders.customer_id
--------------------------------------------------------------------------------------------------------------
select customers.customer_name from 
from customers left join orders 
on customers.customer_id = orders.customer_id

--------------------------------------------------------------------------------------------------------------

select products.product_name, sum(orders.quantity * orders.price) as total_sales
from customers join orders 
on customers.customer_id = orders.customer_id
join products on
products.product_id = orders.product_id
group  by products.product_name
having sum(orders.quantity * orders.price) > 50000

--------------------------------------------------------------------------------------------------------------
select customers.region, sum(orders.quantity * orders.price) as total_sales
from customers join orders 
on customers.customer_id = orders.customer_id
join products on
products.product_id = orders.product_id
group  by customers.region
--------------------------------------------------------------------------------------------------------------
select customers.region, orders.order_id
from customers join orders 
on customers.customer_id = orders.customer_id
join products on
products.product_id = orders.product_id
where customers.region = 'South'

--------------------------------------------------------------------------------------------------------------

select customers.customer_name, count(orders.order_id) as cnt  from 
from customers join orders 
on customers.customer_id = orders.customer_id
group by customers.customer_name
having count(orders.order_id) > 1

--------------------------------------------------------------------------------------------------------------

select products.product_id from products where products.product_id not in (select products.product_id
from orders join products on
products.product_id = orders.product_id)

--------------------------------------------------------------------------------------------------------------
select products.category, sum(orders.quantity * orders.price) as total_sales
from products join orders on
products.product_id = orders.product_id
group  by products.category

--------------------------------------------------------------------------------------------------------------



